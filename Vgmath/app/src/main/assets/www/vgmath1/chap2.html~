		 function marume6(x) {
		   var xx=x*1000000;
		   xx=Math.round(xx);
		   xx  /= 1000000;
		   if( x- xx == 0 ) {
			 return xx;
		   } else {
			 return xx+"…";
		   }
		 }
		 function marume4(x) {
		   x*=10000;
		   x=Math.round(x);
		   x /= 10000;
		   return x;
		 }
		 var nowgs;
		 var gs_exp;
		 var a_exp=2;
		 $(document).delegate('#page_exp','pageinit',function(e) {
		   gs_exp=new GraphScreenXY("canvas_exp",6.5,4.5,0.7,1);
		   gs_exp.setLeft(-2.25);
		   gs_exp.setBottom(-0.5);
		   gs_exp.gobackOriginalSize();
		   gs_exp.setFunction(function(x) { return Math.pow(a_exp,x);});
		   nowgs=gs_exp;
		 });
		 $(document).delegate('#page_exp','pageshow',function(e) {
		   nowgs=gs_exp;
		   gs_exp.writeGraph();
		 });
		 function upA() {
		   a_exp +=0.1;
		   if( a_exp>10 ) { a_exp=10; }
		   changeA();
		 }
		 function downA() {
		   a_exp-=0.1;
		   if( a_exp<0.1 ) { a_exp=0.1;}
		   changeA();
		 }
		 var s=4;
		 function upS() {
		   s +=1;
		   if( s>100 ) { s=100; }
		   changeS();
		 }
		 function downS() {
		   s-=1;
		   if( s<2 ) { s=2;}
		   changeS();
		 }
		 function changeS() {
		   $('#s_value').html(s);
		   var scale=(s+0.5)/ 4.5;
		   gs_exp.setScaleYX(scale);
		   gs_exp.setScale();
		   gs_exp.writeGraph();
		 }
	   
		 function changeA() {
		   a_exp *=10;
		   a_exp=Math.round(a_exp);
		   a_exp = a_exp/ 10;
		   $('#a_value').html(a_exp);
		   nowgs.writeGraph();
		 }
		 var gs_e;
		 $(document).delegate('#page_e','pageinit',function(e) {
		   gs_e=new GraphScreenXY("canvas_e",4.5,3,0.7,1);
		   gs_e.setLeft(-2.25);
		   gs_e.setBottom(-0.5);
		   gs_e.gobackOriginalSize();
		   gs_e.setFunction(function(x) { return Math.pow(a_e,x);});
		   gs_e.setFunction(function(x) { return 1+x;},"rgba(0,0,255,0.3)");
		   nowgs=gs_e;
		 });
		 $(document).delegate('#page_e','pageshow',function(e) {
		   nowgs=gs_e;
		   gs_e.writeGraph();
		 });
		 function upA_E(k) {
		   a_e +=k;
		   if( a_e>10 ) { a_e=10; }
		   changeA_E();
		 }
		 function downA_E(k) {
		   a_e-=k;
		   if( a_e<0.1 ) { a_e=0.1;}
		   changeA_E();
		 }
		 function changeA_E() {
		   a_e *=100;
		   a_e=Math.round(a_e);
		   a_e = a_e/ 100;
		   $('#a_e_value').html(a_e);
		   nowgs.writeGraph();
		 }
		 function zoomnormal() {
		   nowgs.o_h=3;
		   nowgs.o_syx=1;
		   nowgs.setBottom(-0.5);
		   nowgs.gobackOriginalSize();
		   nowgs.writeGraph();
		 }
		 function zoomin2() {
		   nowgs.o_h=1.5;
		   nowgs.o_syx=0.5;
		   nowgs.setBottom(0.25);
		   nowgs.gobackOriginalSize();
		   nowgs.writeGraph();
		 }
		 function zoomin4() {
		   nowgs.o_h=0.75;
		   nowgs.o_syx=0.25;
		   nowgs.setBottom(0.625);
		   nowgs.gobackOriginalSize();
		   nowgs.changeScale(0.25);
		   nowgs.writeGraph();
		 }
		 var a_e=2;
		 var gs_log;
		 var a_log=2;
		 $(document).delegate('#page_log','pageinit',function(e) {
		   gs_log=new GraphScreenXY("canvas_log",6.5,7,0.7,1);
		   gs_log.setLeft(-2.25);
		   gs_log.setBottom(-3.5);
		   gs_log.gobackOriginalSize();
		   gs_log.setFunction(function(x) { return Math.pow(a_log,x);},"rgba(255,0,0,0.4)");
		   gs_log.setFunction(function(x) { return Math.log(x)/ Math.log(a_log);},"rgb(0,0,255)");
		   nowgs=gs_log;
		 });
		 $(document).delegate('#page_log','pageshow',function(e) {
		   nowgs=gs_log;
		   gs_log.writeGraph();
		 });
		 function upA_LOG() {
		   a_log +=0.1;
		   if( a_log>10 ) { a_log=10; }
		   changeA_LOG();
		 }
		 function downA_LOG() {
		   a_log-=0.1;
		   if( a_log<0.1 ) { a_log=0.1;}
		   changeA_LOG();
		 }
		 var s_log=4;
		 function upS_LOG() {
		   s_log +=1;
		   if( s_log>100 ) { s_log=100; }
		   changeS_LOG();
		 }
		 function downS_LOG() {
		   s_log-=1;
		   if( s_log<2 ) { s_log=2;}
		   changeS_LOG();
		 }
		 function changeS_LOG() {
		   $('#s_log_value').html(s_log);
		   var scale=(s_log+0.5)/ 4.5;
		   gs_log.setScaleYX(scale);
		   gs_log.setScale();
		   gs_log.writeGraph();
		 }	   
		 function changeA_LOG() {
		   a_log *=10;
		   a_log=Math.round(a_log);
		   a_log = a_log/ 10;
		   $('#a_log_value').html(a_log);
		   $('#a_log_value2').html(a_log);
		   nowgs.writeGraph();
		 }
